@model IEnumerable<BudgetTracker.DTOs.IncomeDto>

@{
    ViewData["Title"] = "Income Dashboard";
    var totalIncome = Model.Sum(i => i.Amount);
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Add New Income</a>
</div>

<div class="alert alert-success">
    <strong>Total Income:</strong> @totalIncome.ToString("C")
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Source</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Source</td>
                <td>@item.Amount.ToString("C")</td>
                <td>@item.DateReceived.ToShortDateString()</td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
