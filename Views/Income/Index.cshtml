@model IEnumerable<BudgetTracker.DTOs.IncomeDto>

@{
    ViewData["Title"] = "Income Dashboard";
    var totalIncome = Model.Sum(i => i.Amount);
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Add New Income</a>
</div>

<div class="alert alert-success">
    <strong>Total Income:</strong> @totalIncome.ToString("C")
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">
            <i class="bi bi-funnel-fill text-primary"></i> Filter
        </h5>

        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label fw-semibold">Income Source</label>
                <input type="text" id="source" class="form-control" placeholder="Enter source" />
@*                 <select id="source" class="form-select">
                    <option value="">All Sources</option>
                    @foreach (var s in (SelectList)ViewBag.SourceList)
                    {
                        <option value="@s.Text">@s.Text</option>
                    }
                </select> *@
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">From Date</label>
                <input type="date" id="startDate" class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">To Date</label>
                <input type="date" id="endDate" class="form-control" />
            </div>

            <div class="col-md-3 d-flex justify-content-end">
                <button id="filterBtn" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Filter
                </button>
                <button id="clearBtn" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Clear
                </button>
            </div>
        </div>
    </div>
</div>

<div id="incomeTableContainer">
    <partial name="_IncomeTablePartial" model="Model" />
</div>

@section Scripts {
    <script>
        // Function to load filtered data via AJAX
        function loadFilteredData() {
               var source = $('#source').val();
               var startDate = $('#startDate').val();
               var endDate = $('#endDate').val();

               $.ajax({
                   url: '@Url.Action("Filter", "Income")',
                   type: 'GET',
                   data: { source: source, startDate: startDate, endDate: endDate },
                   success: function (result) {
                       $('#incomeTableContainer').html(result);
                   },
                   error: function () {
                       alert('Error loading data.');
                   }
               });
           }

        // Trigger filter
        $('#filterBtn').on('click', function (e) {
            e.preventDefault();
            loadFilteredData();
        });

        // Clear filters
        $('#clearBtn').on('click', function (e) {
            e.preventDefault();
            $('#source').val('');
            $('#startDate').val('');
            $('#endDate').val('');
            loadFilteredData();
        });
    </script>
}