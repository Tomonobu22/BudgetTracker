@model BudgetTracker.DTOs.IncomeDto

@{
    ViewData["Title"] = "Add Income";
}

<div class="card border-success">
    <div class="card-header bg-success text-white">
        Add New Income
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Source:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="Tag.Name" class="form-control" placeholder="Enter source"></input>
                    <span asp-validation-for="Tag.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Amount:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="Amount" class="form-control" placeholder="Enter amount" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Date Received:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="DateReceived" type="date" class="form-control" />
                    <span asp-validation-for="DateReceived" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
