@model BudgetTracker.DTOs.InvestmentDto

@{
    ViewData["Title"] = "Add Investment";
}

<div class="card border-success">
    <div class="card-header bg-success text-white">
        Add New Investment
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Type:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="Type" class="form-control" placeholder="Enter type"></input>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Amount:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="Amount" class="form-control" placeholder="Enter amount" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Date Invested:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="DateInvested" type="date" class="form-control" />
                    <span asp-validation-for="DateInvested" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>CurrentValue:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="CurrentValue" class="form-control" placeholder="Enter current value" />
                    <span asp-validation-for="CurrentValue" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
