@model BudgetTracker.DTOs.InvestmentDto

@{
    ViewData["Title"] = "Edit Investment";
}

<div class="card border-primary">
    <div class="card-header bg-primary text-white">Edit Investment</div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" id="newTagName" name="newTagName" />
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="TagId" class="control-label">Category</label>
                    <div class="input-group">
                        <select asp-for="TagId" class="form-control" asp-items="ViewBag.Tags"></select>
                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#addTypeModal">
                            + Add New
                        </button>
                    </div>
                    <span asp-validation-for="TagId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="DateInvested" class="control-label">Date Invested</label>
                    <input asp-for="DateInvested" class="form-control" type="date"/>
                    <span asp-validation-for="DateInvested" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="CurrentValue" class="control-label">Current Value</label>
                    <input asp-for="CurrentValue" class="form-control" />
                    <span asp-validation-for="CurrentValue" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
        @await Html.PartialAsync("_AddTypeModal")
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
