@model IEnumerable<BudgetTracker.DTOs.ExpenseDto>

@{
    ViewData["Title"] = "Expense Dashboard";
    var totalExpenses = Model.Sum(e => e.Amount);
}

<h1>Expense Dashboard</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Add New Expense</a>
</div>

<div class="alert alert-danger">
    <strong>Total Expenses:</strong> @totalExpenses.ToString("C")
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">
            <i class="bi bi-funnel-fill text-primary"></i> Filter
        </h5>

        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label fw-semibold">Expense Category</label>
                <select id="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var s in ViewBag.Categories)
                    {
                        <option value="@s">@s</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Expense Description</label>
                <input type="text" id="description" class="form-control" placeholder="Enter description" />
            </div>

            <div class="col-md-2">
                <label class="form-label fw-semibold">From Date</label>
                <input type="date" id="startDate" class="form-control" />
            </div>

            <div class="col-md-2">
                <label class="form-label fw-semibold">To Date</label>
                <input type="date" id="endDate" class="form-control" />
            </div>

            <div class="col-md-2 d-flex justify-content-end">
                <button id="filterBtn" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Filter
                </button>
                <button id="clearBtn" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Clear
                </button>
            </div>
        </div>
    </div>
</div>

<div id="expenseTableContainer">
    <partial name="_ExpenseTablePartial" model="Model" />
</div>

@section Scripts {
    <script>
        // Function to load filtered data via AJAX
        function loadFilteredData() {
               var category = $('#category').val();
               var description = $('#description').val();   
               var startDate = $('#startDate').val();
               var endDate = $('#endDate').val();

               $.ajax({
                   url: '@Url.Action("Filter", "Expense")',
                   type: 'GET',
                   data: { category: category, description: description, startDate: startDate, endDate: endDate },
                   success: function (result) {
                       $('#expenseTableContainer').html(result);
                   },
                   error: function () {
                       alert('Error loading data.');
                   }
               });
           }

        // Trigger filter
        $('#filterBtn').on('click', function (e) {
            e.preventDefault();
            loadFilteredData();
        });

        // Clear filters
        $('#clearBtn').on('click', function (e) {
            e.preventDefault();
            $('#category').val('');
            $('#description').val('');
            $('#startDate').val('');
            $('#endDate').val('');
            loadFilteredData();
        });
    </script>
}