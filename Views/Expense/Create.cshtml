@model BudgetTracker.DTOs.ExpenseDto

@{
    ViewData["Title"] = "Add Expense";
}

<div class="card border-success">
    <div class="card-header bg-success text-white">
        Add New Expense
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Category:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="Category" class="form-control" placeholder="Enter category"></input>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Description:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="Description" class="form-control" placeholder="Enter description"></input>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Amount:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="Amount" class="form-control" placeholder="Enter amount" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label class="col-sm-3 col-form-label text-end pe-3"><strong>Date Incurred:</strong></label>
                <div class="col-sm-9">
                    <input asp-for="DateIncurred" type="date" class="form-control" />
                    <span asp-validation-for="DateIncurred" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
